<Window x:Class="HR.SSS.R3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HR.SSS.R3"
        mc:Ignorable="d"
        Title="SSS R3 File Transformation Tool" Height="390.833" Width="627.5" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Icon="records.png">
    <Grid Height="361" VerticalAlignment="Top" HorizontalAlignment="Left" Width="530">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="29*"/>
            <ColumnDefinition Width="92*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TxtInputFile" HorizontalAlignment="Left" Height="24" Margin="20,81,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="338" Grid.Column="1"/>
        <Label Content="Source Excel File:" HorizontalAlignment="Left" Margin="24,76,0,0" VerticalAlignment="Top" Height="26" Width="105" Grid.ColumnSpan="2"/>
        <Button x:Name="BtnBrowseInput" Content="Browse..." Margin="0,81,-46,0" Click="BtnBrowseInput_Click" Grid.Column="1" Width="80" HorizontalAlignment="Right" Height="24" VerticalAlignment="Top"/>
        <Label Content="SSS R3 File Transformation Tool&#xD;&#xA;" HorizontalAlignment="Left" Margin="20,7,0,0" VerticalAlignment="Top" Height="38" FontWeight="Bold" FontSize="18" Width="295" Grid.Column="1"/>
        <Label Content="Output Location:" HorizontalAlignment="Left" Margin="24,118,0,0" VerticalAlignment="Top" Height="26" Width="105" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TxtOutputFile" HorizontalAlignment="Left" Height="24" Margin="20,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="338" Grid.Column="1"/>
        <Button x:Name="BtnGenerate" Content="Generate SSS R3 File" HorizontalAlignment="Left" Margin="20,207,0,0" VerticalAlignment="Top" Width="338" Click="BtnGenerate_Click" Grid.Column="1" Height="29" IsCancel="True" FontWeight="Bold"/>
        <Label Content="Employer Name:" HorizontalAlignment="Left" Margin="24,161,0,0" VerticalAlignment="Top" Height="26" Width="105" Grid.ColumnSpan="2"/>
        <TextBox x:Name="TxtEmployerName" HorizontalAlignment="Left" Height="24" Margin="20,163,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="338" Grid.Column="1"/>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="71" Margin="20,252,0,-53" Stroke="#FFA0A0A0" VerticalAlignment="Top" Width="338" Grid.Column="1"/>
        <Label Content="Total Number of Employees:" HorizontalAlignment="Left" Margin="28,257,0,-19" VerticalAlignment="Top" Height="32" Width="168" Grid.Column="1" Opacity="0.5"/>
        <Label Content="Total Amount Computed:" HorizontalAlignment="Left" Margin="28,284,0,-46" VerticalAlignment="Top" Height="32" Width="168" Grid.Column="1" Opacity="0.5"/>
        <Label x:Name="LblEmployeesCount" Content="" HorizontalAlignment="Left" Margin="190,257,0,-13" VerticalAlignment="Top" Height="26" Width="168" Grid.Column="1"/>
        <Label x:Name="LblTotalAmount" Content="" HorizontalAlignment="Left" Margin="190,284,0,-40" VerticalAlignment="Top" Height="26" Width="168" Grid.Column="1"/>
        <Label Content="Transforms Excel File to a format compliant for SSS R3 submission" HorizontalAlignment="Left" Margin="20,31,0,0" VerticalAlignment="Top" FontSize="11" Grid.Column="1"/>
        <Image HorizontalAlignment="Left" Height="47" Margin="82,9,0,0" VerticalAlignment="Top" Width="44" Source="records.png" Grid.ColumnSpan="2"/>
        <Button x:Name="BtnSpecifyOutput" Content="Specify..." HorizontalAlignment="Right" Margin="0,120,-46,0" Width="80" Click="Button_Click" Grid.Column="1" Height="24" VerticalAlignment="Top"/>

    </Grid>
</Window>
